<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.tahopen</groupId>
    <artifactId>tahopen-ce-jar-parent-pom</artifactId>
    <version>0.1.0.0-SNAPSHOT</version>
  </parent>
  <groupId>org.tahopen</groupId>
  <artifactId>tdi-dataservice-client</artifactId>
  <version>0.1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Dataservice client parent project</name>
  <modules>
    <module>pdi-dataservice-client-api</module>
    <module>pdi-dataservice-client</module>
    <module>assemblies</module>
  </modules>
